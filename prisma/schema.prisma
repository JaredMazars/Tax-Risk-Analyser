generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Project {
  id            Int             @id @default(autoincrement())
  name          String
  description   String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  status        String          @default("ACTIVE")
  archived      Boolean         @default(false)
  mappings      MappedAccount[]
  taxAdjustments TaxAdjustment[]
  adjustmentDocuments AdjustmentDocument[]
  aiTaxReports  AITaxReport[]
  users         ProjectUser[]
}

model MappedAccount {
  id          Int      @id @default(autoincrement())
  accountCode String
  accountName String
  section     String
  subsection  String
  balance     Float
  priorYearBalance Float @default(0)
  sarsItem    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
}

model TaxAdjustment {
  id          Int      @id @default(autoincrement())
  projectId   Int
  type        String   // DEBIT, CREDIT, ALLOWANCE, or RECOUPMENT
  description String
  amount      Float
  status      String   @default("SUGGESTED") // SUGGESTED, APPROVED, REJECTED, MODIFIED
  sourceDocuments String? // JSON array of document references
  extractedData String? // JSON object of LLM-extracted information
  calculationDetails String? // JSON object of calculation breakdown
  notes       String? // Analyst comments
  sarsSection String? // Relevant SARS tax act section
  confidenceScore Float? // AI confidence score (0-1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id])
  documents   AdjustmentDocument[]

  @@index([projectId])
  @@index([status])
  @@index([createdAt])
  @@index([status, projectId])
}

model AdjustmentDocument {
  id              Int      @id @default(autoincrement())
  projectId       Int
  taxAdjustmentId Int?
  fileName        String
  fileType        String // PDF, EXCEL, etc.
  fileSize        Int // Size in bytes
  filePath        String // Storage path
  uploadedBy      String? // User identifier
  extractionStatus String @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  extractedData   String? // JSON object of extracted data
  extractionError String? // Error message if extraction failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  project         Project  @relation(fields: [projectId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  taxAdjustment   TaxAdjustment? @relation(fields: [taxAdjustmentId], references: [id], onDelete: SetNull, onUpdate: NoAction)

  @@index([projectId])
  @@index([taxAdjustmentId])
  @@index([extractionStatus])
  @@index([extractionStatus, projectId])
}

model AITaxReport {
  id                Int      @id @default(autoincrement())
  projectId         Int
  executiveSummary  String
  risks             String   // JSON array of risk objects
  taxSensitiveItems String   // JSON array of tax-sensitive item objects
  detailedFindings  String
  recommendations   String   // JSON array of recommendation strings
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  project           Project  @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

// Authentication Models for Azure AD / NextAuth.js
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER, ADMIN
  accounts      Account[]
  sessions      Session[]
  projects      ProjectUser[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Project-level access control
model ProjectUser {
  id        Int      @id @default(autoincrement())
  projectId Int
  userId    String
  role      String   @default("VIEWER") // OWNER, EDITOR, VIEWER
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([userId])
  @@index([projectId])
}
