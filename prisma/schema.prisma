generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id            Int             @id @default(autoincrement())
  name          String
  description   String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  status        String          @default("ACTIVE")
  archived      Boolean         @default(false)
  mappings      MappedAccount[]
  taxAdjustments TaxAdjustment[]
  adjustmentDocuments AdjustmentDocument[]
  aiTaxReports  AITaxReport[]
}

model MappedAccount {
  id          Int      @id @default(autoincrement())
  accountCode String
  accountName String
  section     String
  subsection  String
  balance     Float
  priorYearBalance Float @default(0)
  sarsItem    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
}

model TaxAdjustment {
  id          Int      @id @default(autoincrement())
  projectId   Int
  type        String   // DEBIT, CREDIT, ALLOWANCE, or RECOUPMENT
  description String
  amount      Float
  status      String   @default("SUGGESTED") // SUGGESTED, APPROVED, REJECTED, MODIFIED
  sourceDocuments String? // JSON array of document references
  extractedData String? // JSON object of LLM-extracted information
  calculationDetails String? // JSON object of calculation breakdown
  notes       String? // Analyst comments
  sarsSection String? // Relevant SARS tax act section
  confidenceScore Float? // AI confidence score (0-1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id])
  documents   AdjustmentDocument[]

  @@index([projectId])
  @@index([status])
  @@index([createdAt])
  @@index([status, projectId])
}

model AdjustmentDocument {
  id              Int      @id @default(autoincrement())
  projectId       Int
  taxAdjustmentId Int?
  fileName        String
  fileType        String // PDF, EXCEL, etc.
  fileSize        Int // Size in bytes
  filePath        String // Storage path
  uploadedBy      String? // User identifier
  extractionStatus String @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  extractedData   String? // JSON object of extracted data
  extractionError String? // Error message if extraction failed
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  project         Project  @relation(fields: [projectId], references: [id])
  taxAdjustment   TaxAdjustment? @relation(fields: [taxAdjustmentId], references: [id])

  @@index([projectId])
  @@index([taxAdjustmentId])
  @@index([extractionStatus])
  @@index([extractionStatus, projectId])
}

model AITaxReport {
  id                Int      @id @default(autoincrement())
  projectId         Int
  executiveSummary  String
  risks             String   // JSON array of risk objects
  taxSensitiveItems String   // JSON array of tax-sensitive item objects
  detailedFindings  String
  recommendations   String   // JSON array of recommendation strings
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  project           Project  @relation(fields: [projectId], references: [id])

  @@index([projectId])
}
