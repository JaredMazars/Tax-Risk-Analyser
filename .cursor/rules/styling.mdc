style={{ background: 'linear-gradient(to right, #2E5AAC, #25488A)' }}

// Stats Card Gradients (from light to dark)
style={{ background: 'linear-gradient(to bottom right, #2E5AAC, #25488A)' }}     // Primary
style={{ background: 'linear-gradient(to bottom right, #5B93D7, #2E5AAC)' }}     // Medium
style={{ background: 'linear-gradient(to bottom right, #25488A, #1C3667)' }}     // Dark
style={{ background: 'linear-gradient(to bottom right, #1C3667, #132445)' }}     // Darkest

// Button Gradient (primary actions)
style={{ background: 'linear-gradient(135deg, #5B93D7 0%, #2E5AAC 100%)' }}

// Light Background Gradients (content areas)
style={{ background: 'linear-gradient(135deg, #E0EDFB 0%, #C7DDEF 100%)' }}
style={{ background: 'linear-gradient(135deg, #F0F7FD 0%, #E0EDFB 100%)' }}
